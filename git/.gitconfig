[user]
	name = Yovko Lambrev
	email = yovko@yovko.net
	signingkey = ~/.ssh/id_ed25519_2025.pub

[github]
	user = yovko

[alias]
    setpromail = config user.email "yovko.lambrev@novarto.com"
    setsapmail = config user.email "yovko.lambrev@sap.com"
    su = submodule update --init --recursive
    st = status -sb
	ci = commit
	all = commit -am
	br = branch
	co = checkout
	di = diff
	dic = diff --cached
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files
	ign = ls-files -o -i --exclude-standard
	shoot = push origin --delete
	unstage = reset HEAD --
	prev = checkout -
	discard = checkout --

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = vim
	quotepath = false
	excludesfile = ~/.gitignore_global

[commit]
    gpgsign = true

[push]
	default = current

[pull]
	rebase = false

[mergetool]
	keepBackup = true

[url "git@github.com:"]
	insteadOf = https://github.com/

[init]
	defaultBranch = main

[gpg]
	format = ssh

[includeIf "gitdir:/Users/"]
    path = ~/.gitconfig_mac

[includeIf "gitdir:/home/"]
    path = ~/.gitconfig_linux

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
